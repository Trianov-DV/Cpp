	ifstream fin;
	fin.open(path);

	if (!fin.is_open())
	{
		cout << "File opening error" << endl;
	}
	else
	{
		string str;
		// char ch[100];

		while (!fin.eof())
		{
			str = "";
			getline(fin, str);
			// fin.getline(ch, 100);
			cout << str << endl;
		}
	}

	fin.close();
